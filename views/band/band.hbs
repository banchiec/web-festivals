<div class= title band>
  <h1>Bandas</h1>
</div>
<div class="row justify-content-center bands">
  {{#each bands}}
  <div class="col-sm-12 col-md-4 col-lg-3 item-1">
    <a href="/bandas/{{id}}" class="card">
      <div class="thumb">
        <img src="{{photo}}" class="card-img" alt="cartel del festival">
      </div>
      <article>
        <h3>{{name}}</h3>
      </article>
    </a>
  </div>
  {{/each}}
</div>