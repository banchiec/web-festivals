<div>
  <h1>Festivales</h1>

  <div class="row justify-content-center container-festival">
    {{#each festivals}}
    <div class=" col-sm-12 col-md-4 col-lg-3 item-1">
      <a href="/festivales/detalles/{{_id}}" class="card">
        <div class="thumb">
          <img src="{{photo}}" class="card-img" alt="cartel del festival">
        </div>
        <article>
          <h2>{{name}}</h2>
          <span>{{city}}{{country}}</span>
        </article>
      </a>
    </div>
    {{/each}}
  </div>
</div>