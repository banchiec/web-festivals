        <div class="col-md-4">
            <h1 style="font-weight: 100">Crear Festival</h1>
            <form id="form" action="/festivales/crear" method="post" enctype="multipart/form-data">
                <div class="form-group">
                    <label for="name-input">Nombre</label>
                    <input name="name" type="text" class="form-control" id="name-input">
                </div>
                <div class="form-group">
                    <label for="longitude">ubicación:Longitud</label>
                    <input name="lng" type="text" class="form-control" id="longitude">
                </div>
                <div class="form-group">
                    <label for="latitude">ubicación:latitud</label>
                    <input name="lat" type="text" class="form-control" id="latitude">
                </div>

                <div class="form-group">
                    <label for="city-input">Ciudad</label>
                    <input name="city" type="text" class="form-control" id="city-input">
                </div>
                <div class="form-group">
                    <label for="country-input">Pais</label>
                    <input name="country" type="text" class="form-control" id="country-input">
                </div>
                <div class="form-group">
                    <label for="photo">Foto</label>
                    <input name="photo" type="file" class="form-control" id="photo">
                </div>




