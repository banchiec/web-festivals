        <div class="col-md-8">
            <section class="container">
                <section class="billboard-container">
                    <h2>Crear Fecha</h2>
                    <div id="billboard-form" class="billboard-form">
                        <div class="field">
                            <label for="date">Fecha: </label>
                            <input type="date" name="date">
                        </div>
                        <div class="field">
                            <label for="price">Precio: </label>
